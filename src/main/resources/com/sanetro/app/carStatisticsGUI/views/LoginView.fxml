<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sanetro.app.carStatisticsGUI.controller.LoginViewController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="5.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <Label text="Log in"/>
        <TextField fx:id="usernameField" promptText="Username" text="user1" maxWidth="200" prefWidth="150"/>
        <PasswordField fx:id="passwordField" promptText="Password" text="password123" maxWidth="200" prefWidth="150"/>
        <Button text="Log In" onAction="#handleLogin"/>
    </VBox>

</AnchorPane>

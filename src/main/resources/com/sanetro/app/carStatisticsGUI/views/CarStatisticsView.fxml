<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sanetro.app.carStatisticsGUI.controller.CarChartController"
            prefHeight="900.0" prefWidth="600.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">

    <VBox AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="TOP_LEFT">
            <Button text="Back" onAction="#handleReturnBackButtonAction" prefWidth="100"/>
        </HBox>
        <VBox alignment="CENTER">
            <ScrollPane fitToWidth="true" fitToHeight="true" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
                <BarChart fx:id="carChart" prefHeight="1000">
                    <xAxis>
                        <NumberAxis label="No. of"/>
                    </xAxis>
                    <yAxis>
                        <CategoryAxis label="Categories"/>
                    </yAxis>
                </BarChart>
            </ScrollPane>
        </VBox>
    </VBox>
</AnchorPane>
